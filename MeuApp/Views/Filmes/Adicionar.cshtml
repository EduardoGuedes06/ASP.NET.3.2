@model MeuApp.Models.Filme

@{
    ViewData["Title"] = "Adicionar Novo Filme";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
       <div class="col-md-4">
            <form asp-action="Adicionar">
                <!-- asp-validation-summary="All" -- apresenta todos os erros-->
               <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

               <div class="form-grup">
                   <label asp-for="Titulo" class="col-form-label"></label>
                   <input asp-for="Titulo" class="form-control"/>
                   <span asp-validation-for="Titulo" class="text-danger" ></span>
               </div>
      
               <div class="form-grup">
                   <label asp-for="DataLancamento" class="col-form-label"></label>
                   <input asp-for="DataLancamento" class="form-control"/>
                   <span asp-validation-for="DataLancamento" class="text-danger" ></span>
               </div>

               <div class="form-grup">
                   <label asp-for="Genero" class="col-form-label"></label>
                   <input asp-for="Genero" class="form-control"/>
                   <span asp-validation-for="Genero" class="text-danger" ></span>
               </div>
       
               <div class="form-grup">
                   <label asp-for="Valor" class="col-form-label"></label>
                   <input asp-for="Valor" class="form-control"/>
                   <span asp-validation-for="Valor" class="text-danger" ></span>
               </div>
  
               <div class="form-grup">
                   <label asp-for="Sinopse" class="col-form-label"></label>
                   <input asp-for="Sinopse" class="form-control"/>
                   <span asp-validation-for="Sinopse" class="text-danger" ></span>
               </div>  
      
               <div class="form-grup">
                   <label asp-for="Avaliacao" class="col-form-label"></label>
                   <input asp-for="Avaliacao" class="form-control"/>
                   <span asp-validation-for="Avaliacao" class="text-danger" ></span>
               </div>

			   <div class="form-grup">
                   <br>
				    <input class="btn btn-primary" type="submit" value="Adicionar"</input>
			   </div>
            </form>
		</div>
</div>

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
